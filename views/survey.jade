.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        h3.panel-title.network-title PAN {{currentNetwork.panId}} on Channel {{currentNetwork.channel}}
      .panel-body
        .row.no-print
          .col-md-4
            h2 RSSI: {{getLatestMeasurementEntry().rssi}} dB
              span.rssi-color-tag &nbsp;&#11044;
          .col-md-4
            h2 LQI: {{getLatestMeasurementEntry().lqi}}
              span.lqi-color-tag &nbsp;&#11044;
          .col-md-4
            h2 Joining {{getLatestMeasurementEntry().permitJoin === 'yes' ? 'permitted' : 'not allowed'}}
        .row
          .col-md-12.chart-area
            #chart
        .row.no-print
          .col-md-10
            input.form-control(type='text' ng-model='currentLocation')
          .col-md-2
            button.btn.btn-default(type='button' ng-click='addLog()') Add log entry
        .row
          .col-md-12
            div(ng-show='log.length')
              table.table.table-striped
                thead
                  th ts
                  th Info
                  th LQI
                  th RSSI
                tbody
                  tr(data-ng-repeat='n in log')
                    td {{n.ts | date:'dd.MM.yyyy HH:mm:ss'}}
                    td {{n.info}}
                    td {{n.lqi}}
                    td {{n.rssi}}
include survey-navigation
