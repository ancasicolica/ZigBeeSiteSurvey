.panel.panel-default
  .panel-heading
    h3.panel-title PAN {{currentNetwork.panId}} on Channel {{currentNetwork.channel}}
  .panel-body
    .row
      .col-md-3
        h3 RSSI: {{getLatestMeasurementEntry().rssi}}
        h3 LQI: {{getLatestMeasurementEntry().lqi}}
        h3 Permit Join: {{getLatestMeasurementEntry().permitJoin}}
      .col-md-9
        #chart
    .row
      .col-md-12
        .progress
          .progress-bar(class='{{getRssiClass(getLatestMeasurementEntry().rssi)}}' role='progressbar' aria-valuenow="{{getLatestMeasurementEntry().rssi}}" aria-valuemin="-80" aria-valuemax="0" style="width: {{getLatestMeasurementEntry().rssiPercent}}%;")
            span#sr-only {{getLatestMeasurementEntry().rssi}} dB
    .row
      .col-md-12
        input(type='text' ng-model='currentLocation')
        button.btn.btn-default(type='button' ng-click='addLog()') Log
    .row
      .col-md-12
        div(ng-show='log.length')
          table.table.table-striped
            thead
              th ts
              th Info
              th LQI
              th RSSI
            tbody
              tr(data-ng-repeat='n in log')
                td {{n.ts | date:'dd.MM.yyyy HH:mm:ss'}}
                td {{n.info}}
                td {{n.lqi}}
                td {{n.rssi}}

button.btn.btn-primary(onclick='javascript:window.print()') print
button.btn.btn-default(ng-click='cancelContinousScanning()' ng-disabled='!continousScanningActive') close

