.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        h3.panel-title.network-title PAN {{currentNetwork.panId}} on Channel {{currentNetwork.channel}}
      .panel-body
       .row.no-print
          .col-md-1.col-sm-2.col-xs-2 RSSI
          .col-md-1.col-sm-2.col-xs-3 {{getLatestMeasurementEntry().rssi}} dB
          .col-md-10.col-sm-8.col-xs-7
            .progress.progress-rssi
              .progress-bar.progress-bar-danger(style="width:{{getLatestRssiProgressbarData().progressBarDangerWidth}}%")
              .progress-bar.progress-bar-warning(style="width:{{getLatestRssiProgressbarData().progressBarWarningWidth}}%")
              .progress-bar.progress-bar-success(style="width:{{getLatestRssiProgressbarData().progressBarSuccessWidth}}%")
        .row.no-print
          .col-md-1.col-sm-2.col-xs-2 LQI
          .col-md-1.col-sm-2.col-xs-3 {{getLatestMeasurementEntry().lqi}}
          .col-md-10.col-sm-8.col-xs-7
            //.progress
              .progress-bar.lqi-bar(style="width: {{getLatestMeasurementEntry().lqiPercent}}%;")
        .row.no-print
          .col-md-1.col-sm-2.col-xs-2 Joining
          .col-md-2.col-sm-3.col-xs-4 {{getLatestMeasurementEntry().permitJoin === 'yes' ? 'permitted' : 'not allowed'}}
        .row
          .col-md-12.chart-area
            linechart(data='measurements' options='chartOptions' mode='' width='' height='')
        .row.no-print
          .col-md-10
            input.form-control(type='text' ng-model='currentLocation')
          .col-md-2
            button.btn.btn-default(type='button' ng-click='addLog()') Add log entry
        .row
          .col-md-12
            div(ng-show='log.length')
              table.table.table-striped
                thead
                  th ts
                  th Info
                  th LQI
                  th RSSI
                tbody
                  tr(data-ng-repeat='n in log')
                    td {{n.ts | date:'dd.MM.yyyy HH:mm:ss'}}
                    td {{n.info}}
                    td {{n.lqi}}
                    td {{n.rssi}}
include survey-navigation
