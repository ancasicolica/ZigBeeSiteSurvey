// This is the modal dialog used for dorma+kaba
div
  // Nav tabs
  ul.nav.nav-tabs(role='tablist')
    li.active(role='presentation')
      a(href='#info', aria-controls='home', role='tab', data-toggle='tab') {{'ABOUT.INFO' | translate}}
    li(role='presentation')
      a(href='#support', aria-controls='profile', role='tab', data-toggle='tab') {{'ABOUT.SUPPORT' | translate}}
    li(role='presentation')
      a(href='#licence', aria-controls='messages', role='tab', data-toggle='tab') {{'ABOUT.LICENSE' | translate}}
  // Tab panes
  .tab-content
    #info.tab-pane.active(role='tabpanel')
      h2.info {{'ABOUT.INFO' | translate}}
      h3.info {{'ABOUT.DORMAKABA.RSSI_DEFINITION' | translate}}
      p.info  {{'ABOUT.DORMAKABA.RSSI_DESCRIPTION' | translate}}
      h3.info {{'ABOUT.DORMAKABA.LQI_DEFINITION' | translate}}
      p.info {{'ABOUT.DORMAKABA.LQI_DESCRIPTION' | translate}}
      h3.info {{'ABOUT.DORMAKABA.HOW_RSSI_AND_LQI_WORK' | translate}}
      p.info {{'ABOUT.DORMAKABA.HOW_RSSI_AND_LQI_WORK_INTRO' | translate}}
        ol
          li {{'ABOUT.DORMAKABA.RSSI_AND_LQI_ONE' | translate}}
          li {{'ABOUT.DORMAKABA.RSSI_AND_LQI_TWO' | translate}}
          li {{'ABOUT.DORMAKABA.RSSI_AND_LQI_THREE' | translate}}
          li {{'ABOUT.DORMAKABA.RSSI_AND_LQI_FOUR' | translate}}
          li {{'ABOUT.DORMAKABA.RSSI_AND_LQI_FIVE' | translate}}
      h3.info {{'ABOUT.DORMAKABA.EXAMPLE_NOT_RECOMMENDED' | translate}}
      img.sample(src='/custom/sample_not_good.png')
      h3.info {{'ABOUT.DORMAKABA.EXAMPLE_RECOMMENDED' | translate}}
      img.sample(src='/custom/sample_good.png')

    #support.tab-pane(role='tabpanel')
      h2.info {{'ABOUT.SUPPORT' | translate}}

      p {{'ABOUT.DORMAKABA.CONTACT_SUPPORT' | translate}}
      p {{'ABOUT.DORMAKABA.DOWNLOAD' | translate}}
        | &nbsp;
        a(href='https://secure.kaba.com/access-control/en/sales-support/81668/downloads.html' target='_blank')
          i.fa.fa-external-link

      h4 {{'ABOUT.TOOL_INFO' | translate}}
      table.table.table-condensed.table-info
        tr
          td {{'VERSION' | translate}}
          td {{settings.version}}
        tr
          td {{'ABOUT.COM_PORT' | translate}}
          td {{getConnectedSerialPort()}}
        tr
          td {{'ABOUT.USB_DONGLE' | translate}}
          td {{usbDongle.applicationType}}
        tr
          td {{'ABOUT.HARDWARE' | translate}}
          td {{usbDongle.hardware}}
        tr
          td {{'ABOUT.FIRMWARE' | translate}}
          td {{usbDongle.version}}
        tr
          td {{'ABOUT.LEVEL_GOOD' | translate}}
          td {{settings.levels.good}}
        tr
          td {{'ABOUT.LEVEL_POOR' | translate}}
          td {{settings.levels.acceptable}}

    #licence.tab-pane(role='tabpanel')
      h2.info {{'ABOUT.LICENSE' | translate}}
